<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="alert alert-danger col-6 offset-3" role="alert">
        <% if (err) { %>
            <h4 class="alert-heading"><%= err.message %></h4>
            <p><%= err.stack %></p>
        <% } else { %>
            <p>No error message available.</p>
        <% } %>
    </div>
</div>